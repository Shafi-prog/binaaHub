# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Payment Configuration (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Wathq API Configuration (Saudi Arabia Commercial Registry)
WATHQ_API_URL=https://api.wathq.sa
WATHQ_API_KEY=your_wathq_api_key
WATHQ_ENVIRONMENT=sandbox

# ZATCA Configuration (Saudi Tax Authority)
ZATCA_API_URL=https://gw-fatoora.zatca.gov.sa
ZATCA_CERTIFICATE_PATH=path_to_zatca_certificate
ZATCA_PRIVATE_KEY_PATH=path_to_zatca_private_key
ZATCA_ENVIRONMENT=sandbox

# Email Configuration (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# External API Keys
NEXT_PUBLIC_ADDRESS_API_KEY=your_address_api_key_here

# Medusa Integration Configuration
MEDUSA_BACKEND_URL=http://localhost:9000
DATABASE_URL=your_supabase_database_url_here
REDIS_URL=redis://localhost:6379
JWT_SECRET=binaa_super_secret_key_2025
COOKIE_SECRET=binaa_super_secret_key_2025
