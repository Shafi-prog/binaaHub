# ==============================================
# BINNA PLATFORM - ENVIRONMENT CONFIGURATION
# ==============================================

# =================
# CORE APPLICATION
# =================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =================
# DATABASE & BACKEND
# =================
# Supabase Configuration (Primary Database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=your_supabase_database_url_here

# =================
# MEDUSA INTEGRATION
# =================
# Medusa E-commerce Backend
MEDUSA_BACKEND_URL=http://localhost:9000
MEDUSA_ADMIN_TOKEN=your_admin_token_here
NEXT_PUBLIC_MEDUSA_API_URL=http://localhost:9000
MEDUSA_PUBLISHABLE_KEY=your_medusa_publishable_key_here

# Medusa Database & Cache
REDIS_URL=redis://localhost:6379
JWT_SECRET=binaa_super_secret_key_2025
COOKIE_SECRET=binaa_super_secret_key_2025

# CORS Configuration
STORE_CORS=http://localhost:3000,http://localhost:8000
ADMIN_CORS=http://localhost:3000,http://localhost:9000

# =================
# PAYMENT SYSTEMS
# =================
# Stripe (International Payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# MyFatoorah (Middle East Payments)
MYFATOORAH_API_KEY=your_myfatoorah_api_key
MYFATOORAH_ENVIRONMENT=sandbox

# =================
# SAUDI INTEGRATIONS
# =================
# Wathq API (Commercial Registry)
WATHQ_API_URL=https://api.wathq.sa
WATHQ_API_KEY=your_wathq_api_key
WATHQ_ENVIRONMENT=sandbox

# ZATCA (Tax Authority)
ZATCA_API_URL=https://gw-fatoora.zatca.gov.sa
ZATCA_CERTIFICATE_PATH=path_to_zatca_certificate
ZATCA_PRIVATE_KEY_PATH=path_to_zatca_private_key
ZATCA_ENVIRONMENT=sandbox

# =================
# AUTHENTICATION
# =================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =================
# EXTERNAL SERVICES
# =================
# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Address & Maps API
NEXT_PUBLIC_ADDRESS_API_KEY=your_address_api_key_here

# =================
# ERP INTEGRATIONS
# =================
# Odoo ERP System
ODOO_URL=http://localhost:8069
ODOO_DB=your_odoo_database
ODOO_USER=admin
ODOO_PASSWORD=your_odoo_password

# IDURAR ERP Integration
IDURAR_API_URL=http://localhost:8888
IDURAR_API_KEY=your_idurar_api_key

# =================
# MEDUSA ADMIN
# =================
# Medusa Admin Credentials (Development/Testing)
MEDUSA_ADMIN_EMAIL=admin@your-domain.com
MEDUSA_ADMIN_PASSWORD=your_secure_admin_password

# =================
# DATABASE URLS
# =================
# Alternative database connection (for migrations)
SUPABASE_DB_URL=your_supabase_database_url_with_credentials

# =================
# DEVELOPMENT ONLY
# =================
# Uncomment for development/testing
# DEBUG=true
# LOG_LEVEL=debug

# =================
# PRODUCTION NOTES
# =================
# For production deployment:
# 1. Change all URLs to production domains
# 2. Use secure secrets (minimum 32 characters)
# 3. Set NODE_ENV=production
# 4. Use production API keys
# 5. Configure proper CORS origins
